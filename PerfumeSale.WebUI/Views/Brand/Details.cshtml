@model Brand
@{
    ViewData["Title"] = "Details";
}

<h3>Detaylar</h3>

<div>
    @*h4>Besin</h4>*@
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>Marka İsmi</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrandName)
        </dd>
        <dt class="col-sm-2">
            <label>Açıklaması</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>

    <a asp-action="Edit" asp-route-id="@Model.BrandId" class="btn btn-primary">Güncelle</a>

    <a asp-action="GetAll" class="btn btn-warning">Marka Listesi</a>
</div>




